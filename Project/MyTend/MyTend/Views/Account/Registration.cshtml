@model MyTend.Models.RegistrationModel

@{
    ViewBag.Title = "Регистрация";
}

@using (Html.BeginForm(Html.BeginForm("Registration", "Account", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="tabs">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href="#tab5-1" data-toggle="tab"><i class="icon-star"></i>Регистрация нового пользователя</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab5-1">
                @if (Model.Errors.Count > 0)
                {
                    <div class="row">
                        <div class="col-md-12 text-center alert alert-danger" role="alert">
                            @foreach (var e in Model.Errors)
                            {
                                <div>- @e</div>
                            }
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-4" style="text-align: center;">

                        <img src="/Image/Get?id=0" width="300" height="300" class="img-thumbnail" id="avatar">
                        <input type="file" accept="image/*" name="Files" style="padding-top: 10px; padding-bottom: 10px;" />

                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="Name">Ваш e-mail (логин)</label>
                                    <input type="email" class="form-control" name="Login" placeholder="my@mail.ru" value="@Model.Login" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="Name">Пароль</label>
                                    <input type="password" min="5" class="form-control" name="Password" placeholder="Пароль" value="@Model.Password" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="Name">Повторите пароль</label>
                                    <input type="password" min="5" class="form-control" name="Password2" placeholder="Пароль" value="@Model.Password" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="Name">Ваше полное имя</label>
                                    <input type="text" class="form-control" name="FullName" placeholder="Иванов Иван Иванович" value="@Model.FullName" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="Name">Чем вы занимаетесь?</label>
                                    <input type="text" class="form-control" name="AboutShort" placeholder="кем работаете, можете быть полезны / на пенсии, домохозяйка" value="@Model.AboutShort">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-7">
                                <div class="form-group">
                                    <label for="Name">Откуда Вы? Выберите страну</label>
                                    <select class="form-control" name="Country" id="CountrysSelect" required>
                                        <option disabled selected>Выберите страну</option>
                                        @foreach (var item in Model.ListCountrys)
                                        {
                                            <option id="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-7">
                                <div class="form-group">
                                    <label for="Name">Регион</label>
                                    <select class="form-control" name="RegionId" id="RegionSelect" required>
                                        <option disabled selected>Выберите регион</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-7">
                                <div class="form-group">
                                    <label for="Name">Город</label>
                                    <select class="form-control" name="CityId" required>
                                        <option disabled selected>Выберите город</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div style="padding-bottom: 20px;">
                                <input type="checkbox" name="IsAllowRules" id="IsAllowRules" /> С <a href="/Docs/Rules" target="_blank">правилами пользования сайтом</a> ознакомлен и согласен.
                            </div>
                        </div>
                        <div class="row">
                            <button type="submit">Зарегистрироваться</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/app/selectRegions.js"></script>
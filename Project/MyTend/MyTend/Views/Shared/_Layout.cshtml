<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="q6C-RpaKhHmEshk4Vt6OGA-y35ftS7v2VCQCwR6_VFk" /> 
    @if (this.ViewBag.NoIndexing != null && this.ViewBag.NoIndexing == true)
    {
        <meta name="robots" content="noindex">
    }
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <script src="http://vk.com/js/api/openapi.js" type="text/javascript"></script>
    <link href="~/Content/unitegallery/css/unite-gallery.css" rel="stylesheet" />

    <script src="~/Content/unitegallery/js/unitegallery.js"></script>
    <script src="~/Content/unitegallery/themes/tilesgrid/ug-theme-tilesgrid.js"></script>
    <script src="~/Scripts/app/redirect.js"></script>
    <script src="~/Scripts/spin.min.js"></script>
    <script src="~/Scripts/ladda.min.js"></script>
</head>
<body>
    <div class="wrapper">
        @RenderPage("_Head.cshtml")
        <section class="slice bg-3">
            <div class="w-section inverse shop">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2">
                            @RenderPage("_LeftSide.cshtml")
                        </div>
                        <div class="col-md-8">
                            @RenderBody()
                        </div>
                        <div class="col-md-2">
                            @RenderPage("_RigthSide.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </section>

        @RenderPage("_Footer.cshtml")

    </div>

    <div id="masonryWr"></div>
    <script src="~/Scripts/app/common.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        VK.Widgets.Group("vk_groups", { mode: 1, width: "163", height: "400", color1: 'FFFFFF', color2: '2B587A', color3: '5B7FA6' }, 105422648);
    </script>
</body>
</html>

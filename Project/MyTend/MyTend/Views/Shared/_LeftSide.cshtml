<div class="widget">
    @if (ViewBag.IsAuth == true)
    {
        <p>@Html.ActionLink("На главную", "Index", "Home", null, new { @style = "color: #285680;" })</p>

        <p>
            @Html.ActionLink("Моя визитка", "Card", "Account", new { user = ViewBag.UserLogin }, new { @style = "color: #245071" })
            @Html.ActionLink(" ред.", "Profile", "Account", null, new { @style = "color: gray; font-size: 10px;" })
        </p>
        if (ViewBag.UnreadedMessages == 0)
        {
            <p>@Html.ActionLink("Сообщения", "Index", "Message", null, new { @style = "color: #245071;" })</p>
        }
        else
        {
            var value = (string)(string.Format("Сообщения ({0})", ViewBag.UnreadedMessages).ToString());
            
            <p>@Html.ActionLink(value, "Index", "Message", null, new { @style = "color: #245071;" })</p>
        }
        <p>@Html.ActionLink("Мои заявки", "My", "Tender", null, new { @style = "color: #245071;" })</p>

        if (ViewBag.ActiveTendersCount == 0)
        {
            <p>@Html.ActionLink("Заявки на торги", "List", "Tender", null, new { @style = "color: #245071;" })</p>
        }
        else
        {
            var value = (string)(string.Format("Заявки на торги ({0})", ViewBag.ActiveTendersCount).ToString());
            <p>@Html.ActionLink(value, "List", "Tender", null, new { @style = "color: #245071;" })</p>
        }
        <p>@Html.ActionLink("Активные торги", "Active", "Tender", null, new { @style = "color: #245071;" })</p>
        <p>@Html.ActionLink("Закрытые торги", "Closed", "Tender", null, new { @style = "color: #245071;" })</p>
        <p>@Html.ActionLink("Визитница", "Index", "Card", null, new { @style = "color: #245071" })</p>
        <p>@Html.ActionLink("Платаня подписка", "Index", "Pay", null, new { @style = "color: #245071" })</p>
    }
    else
    {
        <p>@Html.ActionLink("Регистрация, как это работает", "About", "Account", null, new { @style = "color: #245071;" })</p>
    }
    <p>@Html.ActionLink("Поддержка", "Support", "Home", null, new { @style = "color: #245071;" })</p>
    <p>@Html.ActionLink("О меню", "AboutMenu", "Docs", null, new { @style = "color: gray; font-style: oblique" })</p>
</div>

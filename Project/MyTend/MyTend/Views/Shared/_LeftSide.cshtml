<style>
    div .menu-space {
        padding-bottom: 10px;
    }
</style>
<div class="widget">
    @if (ViewBag.IsAuth == true)
    {
        <p>
            @Html.ActionLink("Моя визитка", "Card", "Account", new { user = ViewBag.UserLogin }, new { @style = "color: #245071" })
            @Html.ActionLink(" ред.", "Profile", "Account", null, new { @style = "color: gray; font-size: 10px;" })
        </p>

        <p>@Html.ActionLink("Новая заявка", "Index", "Tender", null, new { @style = "color: #245071;" })</p>
        
        <p>
            @Html.ActionLink("Мои заявки - я ищу", "My", "Tender", null, new { @style = "color: #245071;" })
        </p>

        if (ViewBag.ActiveTendersCount == 0)
        {
            <p>
                @Html.ActionLink("Заявки от покупателей", "Active", "Tender", null, new { @style = "color: #245071;" })
            </p>
        }
        else
        {
            var value = (string)(string.Format("Заявки от покупателей ({0})", ViewBag.ActiveTendersCount).ToString());

            <p>@Html.ActionLink(value, "Active", "Tender", null, new { @style = "color: #245071;" })</p>
        }
        <p>
            @Html.ActionLink("Мои предложения - я предлагаю", "List", "Tender", null, new { @style = "color: #245071;" })
        </p>
        <p>
            @Html.ActionLink("Мои победы в торгах", "Winner", "Tender", null, new { @style = "color: #245071;" })
        </p>
        <p>@Html.ActionLink("Стать продавцом", "Index", "Pay", null, new { @style = "color: #245071" })</p>
    }
    else
    {
        <p>@Html.ActionLink("Как это работает", "AboutWork", "Docs", null, new { @style = "color: #245071;" })</p>
    }
    <p>@Html.ActionLink("Часто задаваемые вопросы", "faq", "Docs", null, new { @style = "color: #245071;" })</p>
    <p>@Html.ActionLink("Новости сайта", "Blog", "Home", null, new { @style = "color: #245071; font-style: oblique" })</p>


</div>

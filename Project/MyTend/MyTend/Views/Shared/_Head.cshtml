<header>
    <div class="container header-image-backgound">
        <div class="row head-backgound ">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-3">
                        <div style="text-align: center; padding-top: -10px;" class="header-image-backgound">
                            <a href="~/Home/Index" title="MY-TEND.COM" style="text-decoration: none;)">
                                <img src="@Url.Content("~/Content/images/logo.png")" height="100">
                                <br />
                                <br />
                                <br />
                            </a>
                        </div>
                    </div>
                    <div class="col-md-7">

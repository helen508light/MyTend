@model MyTend.Models.ListThemeTenderModel

@{
    ViewBag.Title = "Новый тенедер";
    var max = Model.Themes.Count() - 1;
    var i = 0;
    var itemI = 0;
}
<div>
    <div class="row">
        <div class="col-lg-12 text-center">
            @Html.ActionLink("Инструкция заполнеиния заявок", "Instruction", "Home")
        </div>
    </div>
</div>

<div class="tenderRow" style="padding-top:40px">

    @foreach (var item in Model.Themes)
    {
        if (i == 0)
        {
            @:<div class="row">
        }

            <div style="text-align: center">
                <div class="col-md-4">
                    <p>
                        <a href="~/Tender/Create?theme=@item.Id"><img src="~/Content/images/kats/@item.ImageName" class="tenderImg" width="100" height="100" /></a>
                    </p>
                    <p>
                        <strong>@Html.ActionLink(item.Theme, "Create", "Tender", new { @theme = item.Id }, new { @style = "color: #000066;" })</strong>
                    </p>
                </div>
            </div>

        if (i == 2 || itemI == max)
        {
            @:</div>
        }

        if (i == 2)
        {
            i = 0;
        }
        else
        {
            i++;
        }

        itemI++;
    }
</div>
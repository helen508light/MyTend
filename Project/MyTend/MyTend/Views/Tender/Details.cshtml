@model MyTend.Models.TenderDetailsModel

@{
    ViewBag.Title = "Торг";
    var msgNum = 0;
}
<div class="row" style="border: 0px; border-bottom: 0px; border-color: #D8D8D8; border-style: solid;">
    <div class="col-md-12" style="text-align: center;">
        <h2>Заявка на предоставление услуг</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-12" style="font-size: 14px;">
        <p>
            <span style="font-weight: bold;">Заказчик/покупатель:</span><br />
            @Html.ActionLink(Model.User.FullName, "Card", "Account", new { @user = Model.User.Login }, new { @style = "font-size: 20px; color: #245071;" })
        </p>
        <p>
            <span style="font-weight: bold;">Тема заявки:</span><br />
            @Model.Theme.Theme
        </p>
        <p style="word-wrap: break-word;">
            <span style="font-weight: bold;">Категория заявки:</span><br />
            @Model.Theme.Title
        </p>
        <p>
            <span style="font-weight: bold;">Регион/Город исполнения заявки:</span><br />
            @Model.Region.Name / @Model.City.Name
        </p>
        <p>
            <span style="font-weight: bold;">Название торгов:</span><br />
            @Model.Title
        </p>
        <p style="word-wrap: break-word;">
            <span style="font-weight: bold;">Текст заявки:</span><br />
            @Html.Raw(Model.Message)
        </p>
        <p>
            <span style="font-weight: bold;">Планируемый бюджет:</span><br />
            @Html.Raw(Model.Cost.ToString("0.00") + " руб.")
        </p>
    </div>
</div>

@if (Model.Files != null && Model.Files.Count > 0)
{
    <div class="row" style="padding-bottom: 10px;">
        <div id="gallery" style="display:none;">
            @foreach (var file in Model.Files)
            {
                <img src="~/File/get?id=@file.Id" data-image="/File/get?id=@file.Id" data-description="" style="display:none" />
            }
        </div>
        <script language="javascript">
            $(document).ready(function () {
                $("#gallery").unitegallery();
            });
        </script>
    </div>
}

@if (Model.IsActive == false)
{
    if (Model.Winner != null)
    {
        <div style="color: red; text-align: center">
            Торг закрыт! Победителем выбран: <strong>@Html.ActionLink(Model.Winner.FullName, "Card", "Account", new { @user = Model.Winner.Login }, new { @style = "color: red" })</strong>
        </div>
        <div style="color: red; text-align: center;">
            Торг перенесён в @Html.ActionLink("Завершенные торги", "Closed")
        </div>
    }
    else
    {
        <div style="color: red; text-align: center">
            Время публикации торга истекло, победитель не выбран.
        </div>
        <div style="color: red; text-align: center;">
            Торг перенесён в меню @Html.ActionLink("Завершенные торги", "Closed")
        </div>
    }
}

<div style="padding-top: 15px;"></div>

@if (Model.Messages != null)
{
    <div style="padding-top: 15px;"></div>
    <div class="row" style="border: 0px solid #d8dfe6; border-style: solid;">
        <div class="col-md-12" style="text-align: center; font-weight: bold; color: red;">
            Обратите внимание:
        </div>
        @if (Model.User.Login == ViewBag.UserLogin)
        {
            <div class="col-md-12" style="text-align: left;">
                <ul>
                    <li>Не торопитесь выбирать победителя торга. Дождитесь максимальное количество предложений. Каждое будет выгодно отличаться от предыдущего.</li>
                    <li>Не забывайте писать на "доске предложений" свои вопросы, уточнения или детали, которые должны знать продвцы услуг предлагая вам свои условия.</li>
                    <li>Выбрав  победителя свяжитесь с ним по телефону. Назначте встречу для возможного заключения сделки на условиях которые Вас устроили.</li>
                    <li>Отправленне предложение невозможно отредактировать/изменить. Вы можете написать новое предложение с другими условиями.</li>
                </ul>
            </div>
        }
        else
        {

            <div class="col-md-12" style="text-align: left;">
                <li> Внимательно изучив условия заявки от покупателя услуги а так же предложения конкурентов - <strong>сделайте более выгодное предложение</strong>.</li>

                <li>  Следите за ходом торга и меняйте свои условия для покупателя на более выгодные, извучив предложения конкурентов.</li>
            </div>
        }
        <div>

        </div>
    </div>
    <br />
    if (Model.Messages.Count == 0)
    {
        <div class="row">
            <div class="col-md-12" style="text-align: center; font-weight: bold;">
                Предложений пока нет, рекоменуем проверить позже!
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12" style="font-size: 14px; color: white; background-color: red; text-align: center;">
                <strong>Доска предложений</strong>
            </div>
        </div>
    }
    foreach (var message in Model.Messages)
    {
        msgNum++;

        <div class="row" style="border: 1px solid #d8dfe6; border-bottom: 0px; border-style: solid;">
            <div class="col-md-3" style="background-color: #f0f2f7">
                <div style="width: 100%; text-align: left;">
                    <p>
                        <div style="color: blue; width:100%; text-align: center; font-size: 16px;">
                            <strong>
                                @Html.ActionLink(message.User.FullName, "Card", "Account", new { @user = message.User.Login }, new { @style = "color: #245071" })
                            </strong>
                        </div>
                    </p>
                    @if (message.User.Avatar != null)
                    {
                        <p><img src='/Image/Get?id=@message.User.Avatar.Id' style="width: 100%; height: 100%;  padding-top: 6px;" /></p>
                    }
                    else
                    {
                        <p><img src='/Image/Get?id=0' style="width: 100%; height: 100%;  padding-top: 6px;" /></p>
                    }

                    <p>
                        <div style="color: #a0a3b9;">
                            Я из города:
                        </div>
                        <strong>
                            @message.User.City.Name
                        </strong>
                        <div style="color: #a0a3b9;">
                            Я занимаюсь/работаю:
                        </div>
                        <strong>
                            @message.User.AboutShort
                        </strong>
                    </p>
                </div>
            </div>
            <div class="col-md-9">
                <div style="padding-top: 5px;">
                    <div style="color:gray; text-align: left;">
                        Предложение №@msgNum
                    </div>
                    <div style="word-wrap: break-word;">
                        @message.Message
                    </div>
                    <div style="color:gray; text-align: right;">
                        (@message.Date.ToString("dd.MM.yyyy hh:mm:ss"))
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="border: 1px solid #d8dfe6; border-top: 0px; border-bottom: 0px; background-color: #f0f2f7; font-weight: bold;">
            <div class="col-md-12" style="text-align: right">

                @if (message.User.Login != ViewBag.UserLogin)
                {
                    <span>
                        <a href="#" id="login" class="btn" style="text-decoration: underline; color: #245071">Пожаловаться</a>
                    </span>
                    <span style="padding-left: 20px;">
                        @Html.ActionLink("Написать сообщение", "Write", "Card", new { @toUser = message.User.Login }, new { @style = "color: #245071" })
                    </span>
                    <span style="padding-left: 20px;">
                        <a href="#">Добавить в визитницу</a>
                    </span>
                }

                @if (Model.Winner == null)
                {
                    if (message.User.Login != ViewBag.UserLogin && Model.User.Login == ViewBag.UserLogin)
                    {
                        <span style="padding-left: 40px;">
                            @Html.ActionLink("Выбрать победителем", "SelectWinner", "Tender", new { @tenderId = Model.Id, @userId = message.User.Id }, new { @style = "color: red" })
                        </span>
                    }
                }
                else
                {
                    if (message.User.Id == Model.Winner.Id)
                    {
                        <span style="padding-left: 40px;">
                            @Html.ActionLink("Победитель торга", "Card", "Account", new { @user = message.User.Login }, new { @style = "color: red" })
                        </span>
                    }
                }

            </div>
        </div>
    }
}

@if (Model.Winner == null)
{
    <div style="padding-top: 15px;"></div>
    <div class="row">
        @using (Html.BeginForm())
        {
            <input hidden="hidden" name="UserId" value="@Model.User.Id" />
            <input hidden="hidden" name="TenderId" value="@Model.Id" />
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <textarea class="form-control" rows="5" name="Message" placeholder="Максимально подробно опишите условия вашего предложения, указав приемущества перед конкурентами."></textarea>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="" style="text-align: center;">
                    <button type="button" class="btn btn-two" onclick="addTenderMessage()">Отправить предложение / сообщение</button>
                </div>
            </div>
        }
    </div>
    <script src="~/Scripts/app/addTenderMessage.js"></script>
}

@Html.Partial("_ReportTenderMessage")